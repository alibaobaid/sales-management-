<div  class="form-group">
  <%= form_with(model: sales_operation, local: true) do |form| %>
    <% if sales_operation.errors.any? %>
      <div class="alert alert-warning" role="alert" style="text-align: center;">
        <h3> يرجئ التاكد من التالي </h3>
        <ul style="list-style-type: none;">
          <% sales_operation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.collection_select(:manger_id, Manger.all, :id, :name, {:"data-style" => "selectpicker", multiple: true}, {class: "form-control", title: "المدير"})  %>
    </div>

    <div class="form-group">
      <%= form.collection_select(:delegate_id, Delegate.all, :id, :name, {:"data-style" => "selectpicker", multiple: true}, {class: "form-control", title: "المندوب"})  %>
    </div>

    <div class="form-group">
      <%= form.date_field :date, class: "form-control", placeholder: "تاريخ البيع"%>
    </div>

    <div class="form-group">
      <%= form.select(:commodity_type, options_for_select(["جالون","علب"]), {:"data-style" => "form-control", multiple: true}, {class: "form-control", title: "اختر نوع البضاعه"})  %>
    </div>

    <div class="form-group">
      <%= form.number_field :commodity_amount, class: "form-control" , placeholder: "الكمية" %>
    </div>

    <div class="form-group">
      <%= form.number_field :price, class: "form-control", placeholder: 'السعر' %>
    </div>

    <div class="form-group">
      <%= form.number_field :delegate_commission, class: "form-control", placeholder: 'عمولة المندوب' %>
    </div>

    <div class="form-group">
      <%= form.number_field :from_delegate_transfer, class: "form-control", placeholder: 'حواله من المندوب' %>
    </div>

    <div class="form-group">
      <%= form.collection_select(:marketer_id, Marketer.all, :id, :name, {:"data-style" => "selectpicker", multiple: true}, {class: "form-control", title: "المسوق"})  %>
    </div>

    <div class="form-group">
      <%= form.number_field :marketer_commission, class: "form-control", placeholder: 'عمولة المسوق' %>
    </div>

    <div class="form-group">
      <%= form.number_field :to_marketer_transfer, class: "form-control", placeholder: 'حواله للمسوق' %>
    </div>
    <div class="form-group">
      <%= form.number_field :to_manger_transfer, class: "form-control", placeholder: 'حواله للمدير' %>
    </div>

    <div class="form-group">
      <%= form.submit "موافق",class:"btn btn-outline-success my-2 my-sm-0" %>
    </div>
  <% end %>
</div>
