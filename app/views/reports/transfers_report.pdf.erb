
<h2 style="text-align: center;">
تقرير الحوالات ب<%= @current_country.name %> 
</h2>
<p style="text-align: center;"><%= params[:delegate_id].try(:[],:id).present? ? " المندوب #{Delegate.find(params[:delegate_id][:id]).name.to_s}" : "" %></p>
<p style="text-align: center;"><%= params[:marketer_id].try(:[],:id).present? ? " المسوق #{Marketer.find(params[:marketer_id][:id]).name.to_s}" : "" %></p>
<div class="table" >
<table class="table">
    <thead class="thead-light" style="text-align: center;">
      <tr>
        <th>تاريخ الحواله</th>
        <th>نوع الحواله</th>
        <th>صنف المحول</th>
        <th>الاسم</th>
        <th>المبلغ</th>
        <th>اسم البنك</th>
        <th>ملاحظه</th>
    </thead>

    <tbody style="text-align: center;">
      <% @current_country.bank_transfers.each do |bank_transfer| %>
        <tr>
          <td><%= bank_transfer.date_of_transfer.to_date %></td>
          <td><%= bank_transfer.transfer_type %></td>
          <td><%= bank_transfer.section_type %></td>
          <td><%= bank_transfer.manger&.name || bank_transfer.delegate&.name || bank_transfer.marketer&.name || bank_transfer.assistant&.name %></td>
          <td><%= bank_transfer.price %></td>
          <td><%= bank_transfer.bank&.name %></td>
          <td><%= bank_transfer.note %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>