
<h2 style="text-align: center;">
  تقرير عمليات البيع بتاريخ <%= @sales_operations.first&.date.to_s %>
</h2>
<div class="table" >
  <table class="table">
    <thead class="thead-light" style="text-align: center;">
      <tr>
        <th>التاريخ</th>
        <th>السعر</th>
        <th>منطقة العميل</th>
        <th colspan="2">رقم العميل</th>
      </tr>
    </thead>
    <tbody style="text-align: right;">
      <% @sales_operations.each do |sales_operation| %>
        <tr>
          <td><%= sales_operation.date.to_date %></td>
          <td><%= sales_operation.price %></td>
          <td><%= sales_operation.customr_city %></td>
          <td><%= sales_operation.customr_no %></td> 
        </tr>
      <% end %>
    </tbody>
    <tfoot  style="text-align: right;">
        <tr>
          <td>المبلغ المستحق</td>
          <td>عدد الجوالين</td>
          <td>عدد العلب</td>
          <td>عدد الطلبات</td>
        </tr>
        <tr>
          <td><%= @sales_operations.map(&:manager_commission).sum  %></td>
          <td><%= @sales_operations.gallon_and_on_date(@sales_operations.first&.date).pluck(:commodity_amount).sum  %></td>
          <td><%= @sales_operations.box_and_on_date(@sales_operations.first&.date).pluck(:commodity_amount).sum %></td>
          <td><%= @sales_operations.count %></td>
        </tr>
    </tfoot>
  </table>
</div>