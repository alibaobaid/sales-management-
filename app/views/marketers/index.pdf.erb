
<h2 style="text-align: center;">
المسوقين ب<%= @current_country.name %> 
</h2>

<div class="table-responsive" >
  <table class="table">
    <thead class="thead-light" style="text-align: right;">
      <tr>
        <th>الاسم</th>
        <th>المدينه</th>
        <th>رقم الجوال</th>
        <th>المبلغ المستحق</th>
      </tr>
    </thead>

    <tbody style="text-align: right;">
      <% @current_country.marketers.each do |marketer| %>
        <tr>
          <td><%= marketer.name %></td>
          <td><%= marketer.city %></td>
          <td><%= marketer.phone_NO %></td>
          <td><%= marketer.for_him %></td>
        </tr>
      <% end %>
    </tbody>
        <tfoot  style="text-align: center;">
        <tr>
          <td colspan="3">اجمالي المسوقين</td>
          <td colspan="2">اجمالي المبالغ المستحقه</td>
          <td>صافي المبالغ المستحقه</td>
        </tr>
        <tr>
          <td colspan="3"><%= @marketers.count %></td>
          <td colspan="2"><%= @marketers.where('for_him > 0').map(&:for_him).sum  %></td>
          <td ><%= @marketers.map(&:for_him).sum  %></td>
        </tr>
    </tfoot>
  </table>
</div>