<br>

<h2 style="text-align: center;">التحويلات</h2>
<div class="table-responsive" >
  <table class="table">
    <thead class="thead-light" style="text-align: center;">
      <tr>
        <th>تاريخ الحواله</th>
        <th>نوع الحواله</th>
        <th>صنف المحول</th>
        <th>الاسم</th>
        <th>المبلغ</th>
        <th colspan="2">
          <%= form_tag(bank_transfers_path, :method => "get", class: 'navbar-form navbar-left') do %>
                <div class="input-group">
                  <%= search_field_tag :search, params[:search], placeholder: "البحث", class: "form-control" %>
                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-outline-success my-2 my-sm-0"><span class="glyphicon glyphicon-search"></span> بحث</button>
                  </div>
                </div>
          <% end %>
        </th>
      </tr>
    </thead>

    <tbody style="text-align: center;">
      <% @bank_transfers.each do |bank_transfer| %>
        <tr>
          <td><%= bank_transfer.date_of_transfer.to_date %></td>
          <td><%= bank_transfer.transfer_type %></td>
          <td><%= bank_transfer.section_type %></td>
          <td><%= bank_transfer.manger&.name || bank_transfer.delegate&.name || bank_transfer.marketer&.name || bank_transfer.assistant&.name %></td>
          <td><%= bank_transfer.price %></td>
          <td colspan="2" style="text-align: center;"><%= link_to 'حذف', bank_transfer, method: :delete, class: "btn btn-light", data: { confirm: 'هل انت متاكد؟' }%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'إضافة حواله', new_bank_transfer_path ,class:"btn btn-outline-success my-2 my-sm-0" %>
