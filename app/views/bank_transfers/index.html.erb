<p id="notice"  style="text-align: center;" ><%= notice %></p>

<h2 style="text-align: center;">التحويلات</h2>
<div class="table-responsive" >
  <table class="table">
    <thead class="thead-light" style="text-align: center;">
      <tr>
        <th>تاريخ الحواله</th>
        <th>نوع الحواله</th>
        <th>صنف المحول</th>
        <th>الاسم</th>
        <th>المبلغ</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody style="text-align: center;">
      <% @bank_transfers.each do |bank_transfer| %>
        <tr>
          <td><%= bank_transfer.date_of_transfer.to_date %></td>
          <td><%= bank_transfer.transfer_type %></td>
          <td><%= bank_transfer.section_type %></td>
          <td><%= bank_transfer.manger&.name || bank_transfer.delegate&.name || bank_transfer.marketer&.name %></td>
          <td><%= bank_transfer.price %></td>
          <td><%= link_to 'تعديل', edit_bank_transfer_path(bank_transfer), class: "stretched-link" %></td>
          <td><%= link_to 'حذف', bank_transfer, method: :delete, class: "stretched-link", data: { confirm: 'هل انت متاكد؟' }%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'إضافة حواله', new_bank_transfer_path, class: "btn btn-outline-success my-2 my-sm-0" %>
