<center>
  <h2> تسجيل الدخول </h2>
  <div  class="form-group" style='width: 50%;'>
    <%= form_tag( session_attempt_login_path, method: :post) do |form| %>

      <div class="form-group">
        <%= select_tag("country", options_from_collection_for_select(Country.all, "name", "name"), {class: "form-control", title: "اختر نوع الدوله"})  %>
     </div>

      <div class="form-group">
        <%= text_field_tag(:name, params[:name], class: "form-control" , placeholder: "الاسم")  %>
      </div>

      <div class="form-group">
        <%= password_field_tag(:password, params[:password], class: "form-control" , placeholder: "كلمة المرور") %>
      </div>

      <div class="form-group">
        <%= submit_tag "دخول",class:"btn btn-outline-success my-2 my-sm-0" %>
      </div>
    <% end %>
  </div>
</center>