<div  class="form-group">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div  class="alert alert-warning" role="alert" style="text-align: center;" >
        <h3> يرجئ التاكد من التالي </h3>
        <ul style="list-style-type: none;">
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.text_field :username, class: "form-control" , placeholder: "الاسم"  %>
    </div>

    <div class="form-group">
      <%= form.password_field :password, class: "form-control" , placeholder: "كلمة المرور"  %>
    </div>

    <div class="form-group">
      <%= form.select(:role_type, options_for_select(['مدير', 'مستخدم']), {:"data-style" => "selectpicker", multiple: true}, {class: "form-control", title: 'نوع الصلاحيه'})  %>
    </div>

    <div class="form-group">
      <%= form.submit "موافق",class:"btn btn-outline-success my-2 my-sm-0" %>
    </div>
  <% end %>
</div>
