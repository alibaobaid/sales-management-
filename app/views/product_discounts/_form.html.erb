<div  class="form-group">
  <%= form_with(model: product_discount, local: true) do |form| %>
      <% if product_discount.errors.any? %>
        <div class="alert alert-warning" role="alert" style="text-align: center;">
          <h3> يرجئ التاكد من التالي </h3>
          <ul style="list-style-type: none;">
            <% product_discount.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

   <div class="form-group">
      <%= form.label 'اختر المندوب', style: "text-align: right; float: right" %>
      <%= form.collection_select(:delegate_id, @current_country.delegates, :id, :name, {:"data-style" => "selectpicker", multiple: true}, {class: "form-control", title: "المندوب"})  %>
    </div>

    <div class="form-group">
      <%= form.label 'احتر نوع البضاعه', style: "text-align: right; float: right" %>
      <%= form.select(:product_type, options_for_select(["جالون","علب"]), {:"data-style" => "form-control", multiple: true}, {class: "form-control", title: "اختر نوع البضاعه"})  %>
    </div>

    <div class="form-group">
      <%= form.label 'الكميه', style: "text-align: right; float: right" %>
      <%= form.number_field :amount, class: "form-control", placeholder: 'الكمية' %>
    </div>

    <div class="form-group ">
      <%= form.label 'تاريخ صرف البضاعه', style: "text-align: right; float: right" %>
      <%= form.date_field :discount_date, class: "form-control", placeholder: "تاريخ الصرف"%>
    </div>

    <div class="form-group">
      <%= form.label 'سبب صرف البصاعه', style: "text-align: right; float: right" %>
      <%= form.text_field :reason, class: "form-control", placeholder: 'السبب' %>
    </div>

    <div class="actions">
      <%= form.submit "موافق",class:"btn btn-outline-success my-2 my-sm-0" %>
    </div>
  <% end %>
</div>